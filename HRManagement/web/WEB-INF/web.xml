<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ViewInterviewDetailController</servlet-name>
        <servlet-class>controller.ViewInterviewDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPassedController</servlet-name>
        <servlet-class>controller.ViewPassedController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarkCandidateController</servlet-name>
        <servlet-class>controller.MarkCandidateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateJobController</servlet-name>
        <servlet-class>controller.CreateJobController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetDetailJobRecruitmentController</servlet-name>
        <servlet-class>controller.GetDetailJobRecruitmentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewInterviewDetailController</servlet-name>
        <url-pattern>/ViewInterviewDetailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPassedController</servlet-name>
        <url-pattern>/ViewPassedController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarkCandidateController</servlet-name>
        <url-pattern>/MarkCandidateController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateJobController</servlet-name>
        <url-pattern>/CreateJobController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetDetailJobRecruitmentController</servlet-name>
        <url-pattern>/GetDetailJobRecruitmentController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>ShowJobController</welcome-file>
    </welcome-file-list>
</web-app>
